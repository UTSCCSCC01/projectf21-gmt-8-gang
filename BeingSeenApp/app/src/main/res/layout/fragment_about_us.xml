<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/container"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:visibility="visible"
tools:context=".AboutUsFrontend.AboutUsFragment">

<TextView
    android:id="@+id/aboutus_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/about_us"
    android:textSize="20dp"
    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
    android:textColor="@color/black"
    android:textStyle="normal|bold"
    android:visibility="visible"
    android:layout_marginTop="20dp"
    android:layout_gravity="center_horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:visibility="visible" />

<TextView
    android:id="@+id/aboutus_txt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginTop="36dp"
    android:layout_marginEnd="32dp"
    android:textColor="@color/black"
    android:text="The project aims to create an app that helps homeless youth by removing certains stigmas of donating to the homeless, such as the stigma that homeless youths might use the money to purchase alcohol rather than paying off their loans/mortgages. All found will be used in helping homeless youths."
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/aboutus_title" />

    <Button
        android:id="@+id/donateus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="Donate"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        android:textColorHighlight="#00BFA5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beingseen_lottie_animation_view"
        app:layout_constraintVertical_bias="0.771" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/beingseen_lottie_animation_view"
        android:layout_width="383dp"
        android:layout_height="276dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutus_txt"
        app:layout_constraintVertical_bias="0.112"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/aboutus_animation" />

</androidx.constraintlayout.widget.ConstraintLayout>