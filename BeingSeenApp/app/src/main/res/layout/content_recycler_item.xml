<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="match_parent"
    card_view:cardBackgroundColor="#00000000"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/pf_info_border"
        android:padding="16dp">

        <TextView
            android:id="@+id/nameTag"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"

            android:text="Name:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/homelessUsername"
            android:layout_width="395dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/nameTag"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/goalTag"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/nameTag"
            android:layout_marginStart="0dp"
            android:text="Goal:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/goalTitle"
            android:layout_width="395dp"
            android:layout_height="40dp"
            android:layout_below="@id/homelessUsername"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/goalTag"

            android:text="Title"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="78dp"
            android:background="@drawable/pf_info_border"
            android:padding="16dp">

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="261dp"
                android:layout_height="31dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"

                android:layout_toRightOf="@id/progress"
                android:progressTint="@color/green" />

            <TextView
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:text="progress"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/gDescription"
                android:layout_width="395dp"
                android:layout_height="50dp"
                android:layout_below="@+id/progressBar"
                android:text="description"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>