<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContentPage.ContentPageFragment">

    <RelativeLayout
        android:id="@+id/textView"
        android:layout_width="411dp"
        android:layout_height="641dp"
        android:background="@drawable/testbg4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077">

        <TextView
            android:id="@+id/content_page_txt"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="557dp"
            android:text="Content Page"
            android:textColor="@color/white"
            android:textSize="34sp"
            app:layout_constraintVertical_bias="0.024" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/content_page_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="515dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="30dp"
            android:layoutAnimation="@anim/recycler_view_layout_animation" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>