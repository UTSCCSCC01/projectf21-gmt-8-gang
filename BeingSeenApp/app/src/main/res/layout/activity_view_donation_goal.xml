<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContentPage.ViewDonationGoalActivity">

    <RelativeLayout
        android:layout_width="413dp"
        android:layout_height="726dp"
        android:background="@drawable/testbg4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="537dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="104dp"
            android:background="@drawable/pf_info_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/HyUsername"
                android:layout_width="280dp"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="472dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/HyGoalTitle"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="26dp"
                android:layout_marginTop="72dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="400dp"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                android:typeface="normal" />


            <TextView
                android:id="@+id/HyPercentage"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="191dp"
                android:layout_marginTop="158dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="336dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintVertical_bias="0.132" />

            <TextView
                android:id="@+id/HyAmount"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="26dp"
                android:layout_marginTop="159dp"
                android:layout_marginEnd="193dp"
                android:layout_marginBottom="335dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintVertical_bias="0.132" />

            <TextView
                android:id="@+id/HyGoalDescription"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="224dp"
                android:layout_marginEnd="19dp"
                android:layout_marginBottom="21dp"
                android:shadowColor="@color/black"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:typeface="normal" />

            <ProgressBar
                android:id="@+id/HyProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="26dp"
                android:layout_marginTop="122dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="380dp"
                app:layout_constraintVertical_bias="0.019" />

            <TextView
                android:id="@+id/HyGoalDescriptionBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/HyGoalDescription"
                android:layout_alignTop="@+id/HyGoalDescription"
                android:layout_alignEnd="@+id/HyGoalDescription"
                android:layout_alignBottom="@+id/HyGoalDescription"
                android:layout_marginStart="-8dp"
                android:layout_marginTop="-8dp"
                android:layout_marginEnd="-8dp"
                android:layout_marginBottom="-8dp"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>